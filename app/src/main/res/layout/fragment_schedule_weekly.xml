<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             >
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/scrollView3"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout2">
        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/time_tableLayout"
        >

            <TableRow
                    android:id="@+id/time_table_row"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|start">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="50dp" android:gravity="center"
                        android:layout_weight="1">
                    <TextView
                            android:text="9:00"
                            android:textAlignment="center"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/weekly_time_textView"
                            android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/time_layout_mon"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" android:gravity="center"
                        android:layout_weight="1">
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/time_layout_tue"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" android:gravity="center"
                        android:layout_weight="1">
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/time_layout_wed"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" android:gravity="center"
                        android:layout_weight="1">
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/time_layout_thu"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" android:gravity="center"
                        android:layout_weight="1">
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/time_layout_fri"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" android:gravity="center"
                        android:layout_weight="1">
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/time_layout_sat"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" android:gravity="center"
                        android:layout_weight="1">
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/time_layout_sun"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" android:gravity="center"
                        android:layout_weight="1">
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </ScrollView>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="43dp" app:srcCompat="@drawable/ic_left"
            android:id="@+id/left_imageButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            android:contentDescription="leftClick"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout2"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="43dp" app:srcCompat="@drawable/ic_right"
            android:id="@+id/right_imageButton"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/week_select_text_view"
            android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
            android:contentDescription="rightClick"
            app:layout_constraintBottom_toBottomOf="@+id/week_select_text_view"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/week_select_text_view"
            android:textSize="8pt"
            app:layout_constraintEnd_toStartOf="@+id/right_imageButton"
            app:layout_constraintStart_toEndOf="@+id/left_imageButton"
            app:layout_constraintTop_toTopOf="@+id/left_imageButton"
            android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/left_imageButton"
            app:layout_constraintVertical_bias="1.0"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/tableLayout2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/right_imageButton"
            app:layout_constraintBottom_toTopOf="@+id/scrollView3">
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="center|start">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="20dp" android:layout_weight="1">
            </LinearLayout>
            <TextView
                    android:text="Mon"
                    android:layout_width="0dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" android:id="@+id/mon_textView" android:layout_weight="1"/>
            <TextView
                    android:text="Tue"
                    android:layout_width="0dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" android:id="@+id/tue_textView" android:layout_weight="1"/>
            <TextView
                    android:text="Wed"
                    android:layout_width="0dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" android:id="@+id/wed_textView" android:layout_weight="1"/>
            <TextView
                    android:text="Thu"
                    android:layout_width="0dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" android:id="@+id/thu_textView" android:layout_weight="1"/>
            <TextView
                    android:text="Fri"
                    android:layout_width="0dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" android:id="@+id/fri_textView" android:layout_weight="1"/>
            <TextView
                    android:text="Sat"
                    android:layout_width="0dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" android:id="@+id/sat_textView"
                    tools:layout_editor_absoluteY="140dp" tools:layout_editor_absoluteX="129dp"
                    android:layout_weight="1"/>
            <TextView
                    android:text="Sun"
                    android:layout_width="0dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" android:id="@+id/sun_textView" android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>