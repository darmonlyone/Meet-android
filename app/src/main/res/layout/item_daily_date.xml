<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="70dp"
                                             android:layout_height="70dp">

    <LinearLayout
            android:id="@+id/view_linearLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:drawable/btn_default"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="12dp" tools:layout_editor_absoluteX="0dp"
            >
        <TextView
                android:text="Day"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/daily_item_day"
                android:gravity="bottom"
        android:textAlignment="center"/>
        <TextView
                android:gravity="top|center"
                android:text="00"
                android:textSize="11pt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/daily_item_date"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>